<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.hello-world"
        version   = "1.1.0">

    <name>Camera App</name>

    <description>
        Camera example app.
    </description>

    <author href="http://phonegap.com" email="support@phonegap.com">
        PhoneGap Team
    </author>



    <gap:platform name="ios" />
 
<gap:plugin name="org.apache.cordova.inappbrowser">
<gap:plugin name="org.apache.cordova.core.camera" />

<preference name="phonegap-version" value="3.0.0" /> 
 <preference name="orientation" value="portrait" />
 <preference name="DisallowOverscroll" value="true" />

    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
 <feature name="http://api.phonegap.com/1.0/file"/>
 
<access origin="*" />

 <access origin="*" subdomains="true">
<access origin="http://smilesavers.net.au"/>
<access origin="*.akamaihd.net"/>
<access origin="*.fbcdn.net"/>
<access origin="graph.facebook.com"/>
<access origin="api.facebook.com"/>
<access origin="m.facebook.com"/>
<access origin="facebook.com"/>
<access origin="maps.googleapis.com"/>
</widget>
